<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zgy.springboot_biye.dao.AdminDao">
    <insert id="register">
        insert into root(username, password)
        values(#{username}, #{password})
    </insert>
    <update id="updatePass">
        update root set
            username=#{username},password=#{password}
        where username=#{username}
    </update>

    <select id="findAll" resultType="com.zgy.springboot_biye.domain.Admin">
        select * from root
    </select>
    <select id="findAdmin" resultType="com.zgy.springboot_biye.domain.Admin">
        select * from root where username=#{username} and password=#{password}
    </select>
</mapper>